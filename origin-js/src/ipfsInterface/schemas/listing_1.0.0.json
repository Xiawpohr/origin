{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.originprotocol.com/listing_1.0.0.json",
  "title": "Origin Protocol core listing schema for data stored in IPFS",
  "definitions": {
    "money": {
      "type": "object",
      "title": "An amount of money in a specified currency",
      "properties": {
        "currency": {
          "type": "string"
        },
        "amount": {
          "type": "string"
        }
      },
      "required": [
        "currency",
        "amount"
      ]
    },
    "media": {
      "type": "object",
      "title": "Representation of a media asset such as an image or a video",
      "properties": {
        "url": {
          "type": "string"
        },
        "contentType": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dimension": {
          "type": "object",
          "properties": {
            "height": {
              "type": "integer"
            },
            "width": {
              "type": "integer"
            }
          },
          "required": [
            "height",
            "width"
          ]
        }
      },
      "required": [
        "url"
      ]
    },
    "unitListing": {
      "type": "object",
      "properties": {
        "unitsTotal": {
          "type": "integer"
        },
        "price": {
          "$ref": "#/definitions/money"
        },
        "commissionPerUnit": {
          "$ref": "#/definitions/money"
        }
      },
      "required": [
        "unitsTotal",
        "price"
      ]
    },
    "fractionalListing": {
      "type": "object",
      "properties": {
        "slotLength": {
          "type": "integer"
        },
        "slotLengthUnit": {
          "type": "string"
        },
        "availability": {
          "$ref": "#/definitions/jCal"
        }
      },
      "required": [
        "slotLength",
        "slotLengthUnit",
        "availability"
      ]
    },
    "jCal":   {
      "description": "Validates an Origin Protocol jCal data set for a listing or offer",
      "type": "array",
      "minItems": 2,
      "items": [
        {
          "type": "string",
          "enum": ["vcalendar"]
        },
        {
          "type": "array",
          "minItems": 2,
          "items": [
            {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "items": [
                {
                  "type": "string",
                  "enum": ["version"]
                },
                {
                  "type": "object"
                },
                {
                  "type": "string",
                  "enum": ["text"]
                },
                {
                  "type": "string"
                }
              ]
            },
            {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "items": [
                {
                  "type": "string",
                  "enum": ["prodid"]
                },
                {
                  "type": "object"
                },
                {
                  "type": "string",
                  "enum": ["text"]
                },
                {
                  "type": "string"
                }
              ]
            }
          ]
        }
      ],
      "additionalItems": {
        "type": "array",
        "minItems": 9,
        "items": [
          {
            "type": "string",
            "enum": ["vevent"]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["uid"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["dtstart"]
              },
              {
                "type": "object",
                "properties": {
                  "tzid": {
                    "type": "string"
                  }
                },
                "required": [
                  "tzid"
                ]
              },
              {
                "type": "string",
                "enum": ["date-time"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["dtend"]
              },
              {
                "type": "object",
                "properties": {
                  "tzid": {
                    "type": "string"
                  }
                },
                "required": [
                  "tzid"
                ]
              },
              {
                "type": "string",
                "enum": ["date-time"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["rrule"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["x-currency"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["x-price"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["x-is-available"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["boolean"]
              },
              {
                "type": "boolean"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["x-priority"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["integer"]
              },
              {
                "type": "integer"
              }
            ]
          }
        ],
        "additionalItems": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": [
            {
              "type": "string"
            },
            {
              "type": "object"
            },
            {
              "type": "string"
            }
          ]
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "schemaId": {
      "type": "string"
    },
    "dappSchemaId": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "subCategory": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "marketplacePublisher": {
      "type": "string"
    },
    "media": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/media"
      }
    },
    "commission": {
      "$ref": "#/definitions/money"
    },
    "createDate": {
      "type": "string",
      "format": "date-time"
    },
    "creator": {
      "type": "string"
    },
    "updateVersion": {
      "type": "integer"
    },
    "signature": {
      "type": "string"
    }
  },
  "listingType": {
    "enum": [
      "unit",
      "fractional"
    ]
  },
  "oneOf": [
    {
      "$ref": "#/definitions/unitListing"
    },
    {
      "$ref": "#/definitions/fractionalListing"
    }
  ],
  "required": [
    "schemaId",
    "listingType",
    "category",
    "subCategory",
    "language",
    "title",
    "description"
  ]
}
