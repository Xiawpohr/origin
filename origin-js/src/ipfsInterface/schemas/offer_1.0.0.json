{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.originprotocol.com/offer_1.0.0.json",
  "title": "Origin Protocol offer schema for data stored in IPFS",
  "definitions": {
    "money": {
      "type": "object",
      "title": "An amount of money in a specified currency",
      "properties": {
        "currency": {
          "type": "string"
        },
        "amount": {
          "type": "string"
        }
      },
      "required": [
        "currency",
        "amount"
      ]
    },
    "unitOffer": {
      "type": "object",
      "properties": {
        "unitsPurchased": {
          "type": "integer"
        }
      },
      "required": [
        "unitsPurchased"
      ]
    },
    "fractionalOffer": {
      "type": "object",
      "properties": {
        "timeSlots": {
          "$ref": "#/definitions/jCal"
        }
      },
      "required": [
        "timeSlots"
      ]
    },
    "jCal":   {
      "description": "Validates an Origin Protocol jCal data set for a listing or offer",
      "type": "array",
      "minItems": 2,
      "items": [
        {
          "type": "string",
          "enum": ["vcalendar"]
        },
        {
          "type": "array",
          "minItems": 2,
          "items": [
            {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "items": [
                {
                  "type": "string",
                  "enum": ["version"]
                },
                {
                  "type": "object"
                },
                {
                  "type": "string",
                  "enum": ["text"]
                },
                {
                  "type": "string"
                }
              ]
            },
            {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "items": [
                {
                  "type": "string",
                  "enum": ["prodid"]
                },
                {
                  "type": "object"
                },
                {
                  "type": "string",
                  "enum": ["text"]
                },
                {
                  "type": "string"
                }
              ]
            }
          ]
        }
      ],
      "additionalItems": {
        "type": "array",
        "minItems": 6,
        "items": [
          {
            "type": "string",
            "enum": ["vevent"]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["uid"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["dtstart"]
              },
              {
                "type": "object",
                "properties": {
                  "tzid": {
                    "type": "string"
                  }
                },
                "required": [
                  "tzid"
                ]
              },
              {
                "type": "string",
                "enum": ["date-time"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["dtend"]
              },
              {
                "type": "object",
                "properties": {
                  "tzid": {
                    "type": "string"
                  }
                },
                "required": [
                  "tzid"
                ]
              },
              {
                "type": "string",
                "enum": ["date-time"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["x-currency"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          },
          {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": [
              {
                "type": "string",
                "enum": ["x-price"]
              },
              {
                "type": "object"
              },
              {
                "type": "string",
                "enum": ["text"]
              },
              {
                "type": "string"
              }
            ]
          }
        ],
        "additionalItems": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": [
            {
              "type": "string"
            },
            {
              "type": "object"
            },
            {
              "type": "string"
            }
          ]
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "schemaId": {
      "type": "string"
    },
    "listingType": {
      "enum": [
        "unit",
        "fractional"
      ]
    },
    "totalPrice": {
      "$ref": "#/definitions/money"
    },
    "commission": {
      "$ref": "#/definitions/money"
    },
    "verifyTerms": {
      "type" : "object"
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/unitOffer"
    },
    {
      "$ref": "#/definitions/fractionalOffer"
    }
  ],
  "required": [
    "schemaId",
    "listingType",
    "totalPrice",
    "commission"
  ]
}
